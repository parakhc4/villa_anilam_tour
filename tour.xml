		<action name="toggle_music">
			if(!music_is_playing,
				playsound(bgsnd, '%SWFPATH%/music/background.mp3', 0, 0.5);
				set(music_is_playing, true);
			,
				pausesound('bgsnd');
				set(music_is_playing, false);
			);
		</action>
		
	
	
		<action name="switch_daynight">
			copy(current_scene, scene[get(xml.scene)].name);
			if(current_scene == 'scene_1_day',
				loadscene(scene_1_dnight, null, MERGE);
			,
			if(current_scene == 'scene_1_dnight',
				loadscene(scene_1_day, null, MERGE);
			));
		</action>
	
	
	  <action name="toggle_banquet_dropdown">
		if(layer[scene_2_Banquet_Entrance_button].visible,
			<!-- Hide banquet buttons and separators -->
			set(layer[scene_2_Banquet_Entrance_button].visible, false);
			set(layer[scene_1_1CAFE_button].visible, false);
			set(layer[separator_banquet_cafe].visible, false);
			set(layer[banquet_dropdown_button].html, 'F&amp;B ▼');
			set(layer[rooms_dropdown_button].y, 330);
			set(open_dropdown, '');
		,
			<!-- Close rooms dropdown if open -->
			if(layer[scene_Deluxe_Room_1_button].visible,
				set(layer[scene_Deluxe_Room_1_button].visible, false);
				set(layer[scene_Deluxe_Room_button].visible, false);
				set(layer[scene_executive_room_2_button].visible, false);
				set(layer[separator_deluxe_executive].visible, false);
				set(layer[separator_executive_junior].visible, false);
				set(layer[rooms_dropdown_button].html, 'ROOMS ▼');
			);
			
			<!-- Show banquet buttons and separators -->
			set(layer[scene_2_Banquet_Entrance_button].visible, true);
			set(layer[scene_1_1CAFE_button].visible, true);
			set(layer[separator_banquet_cafe].visible, true);
			set(layer[banquet_dropdown_button].html, 'F&amp;B ▲');
			set(layer[rooms_dropdown_button].y, 430);
			set(open_dropdown, 'banquet');
		);
	</action>
	
	 <action name="toggle_rooms_dropdown">
		if(layer[scene_Deluxe_Room_1_button].visible,
			<!-- Hide room buttons and separators -->
			set(layer[scene_Deluxe_Room_1_button].visible, false);
			set(layer[scene_Deluxe_Room_button].visible, false);
			set(layer[scene_executive_room_2_button].visible, false);
			set(layer[separator_deluxe_executive].visible, false);
			set(layer[separator_executive_junior].visible, false);
			set(layer[rooms_dropdown_button].html, 'ROOMS ▼');
			set(open_dropdown, '');
		,
			<!-- Close F&B dropdown if open -->
			if(layer[scene_2_Banquet_Entrance_button].visible,
				set(layer[scene_2_Banquet_Entrance_button].visible, false);
				set(layer[scene_1_1CAFE_button].visible, false);
				set(layer[separator_banquet_cafe].visible, false);
				set(layer[banquet_dropdown_button].html, 'F&amp;B ▼');
				set(layer[rooms_dropdown_button].y, 330); <!-- Reset rooms button position -->
			);
			
			<!-- Show room buttons and separators -->
			set(layer[scene_Deluxe_Room_1_button].visible, true);
			set(layer[scene_Deluxe_Room_button].visible, true);
			set(layer[scene_executive_room_2_button].visible, true);
			set(layer[separator_deluxe_executive].visible, true);
			set(layer[separator_executive_junior].visible, true);
			set(layer[rooms_dropdown_button].html, 'ROOMS ▲');
			set(open_dropdown, 'rooms');
		);
	</action>
	
