	<style name="default_style"
		   css="font-family: 'Montserrat', sans-serif;"/>
	
	<action name="silence_errors">
		set(showerrors, false);
		set(debugmode, false);
		set(logkey.enabled, false);
		set(keycode_192.enabled, false);
		set(keycode_76.enabled, false);
		set(plugin[log].visible, false);
		removelayer(log);
	</action>
	
	<events name="krpanoReady" onkrpanoready="silence_errors();preload_music();" />
	
