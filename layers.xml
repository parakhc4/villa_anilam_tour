<krpano>
    <!-- Welcome Layer -->
    <layer name="welcome_layer"
        type="container"
        width="100%"
        height="100%"
        align="center"
        x="0"
        y="0"
        bgcolor="0xFFFFFF"
        bgalpha="0.8"
        zorder="10000"
        alpha="1.0"
        keep="true" />
        <!-- Welcome Logo -->
    <layer name="welcome_logo"
        parent="welcome_layer"
        url="%SWFPATH%/skin/WelcomeScreen.png" 
        align="center"
        x="0"
        y="-50"
        width="276"
        height="190"
        zorder="10001"
        keep="true"
        handcursor="false"/>
        <!-- Enter Button -->
    <layer name="welcome_button"
        parent="welcome_layer"
        type="text"
        html="Enter"
        align="center"
        x="0"
        y="100"
        width="200"
        height="50"
        bgcolor="0xB8860B"
        bgalpha="1"
        roundedge="15"
        bgshadow="2"
        shadowcolor="0x000000"
        shadowalpha="0.4"
        css="font-family:'Montserrat', sans-serif; font-size:18px; font-weight:bold; color:white; text-align:center; line-height:50px;text-transform: uppercase;"
        onover="tween(scale, 1.1);"
        onout="tween(scale, 1.0);"
        onclick="hide_welcome_layer_natural();init_flags();toggle_music();"
        keep="true"
        zorder="99999" />
        <!-- Logo on top of screen -->
        <layer name="logo_layer"
        url="%SWFPATH%/skin/logo_white.png"
        align="centertop"
        x="0"
        y="10"
        width="190"
        height="60"
        keep="true"
        handcursor="false"
        zorder="999" />

    <layer name="menu_button"
		url="%SWFPATH%/skin/button_toggle.png"
        align="midleft"
        width="40"
        height="40"
        enabled="true"
        handcursor="true"
        keep="true"
        zorder="1000" 
        onover="tween(scale, 1.1, 0.2, easeOutCubic);"
        onout="tween(scale, 1.0, 0.2, easeOutCubic);" 
        onclick="toggle_sidebar();"/>

        <!-- Sidebar -->
    <layer name="sidebar"
        type="container"
        width="250"
        height="100%"
        align="lefttop"
        bgcolor="0xB8860B"
        bgalpha="1"
        border="2 #FFFFFF 1.0"
        visible="false" 
        scalechildren="true"
        keep="true"
        zorder="2001"
        padding="5">
    <!-- Logo on top of sidebar -->
        <layer name="sidebar_logo"
            parent="sidebar"
            url="%SWFPATH%/skin/logoabovesidebar_white.png"
            align="centertop"
            x="0"
            y="50"
            width="190"
            height="60"
            keep="true"
            handcursor="false"
            zorder="1000" />
        <!-- First separator -->
        <layer name="separator1"
            parent="sidebar"
            type="container"
            align="lefttop"
            x="15"
            y="160"
            width="220"
            height="1"
            bgcolor="0xFFFFFF"
            bgalpha="0.3"
            keep="true"
            zorder="1000" />
        <!-- First Button ( OVERVIEW ) -->
            <layer name="overview_button"
                parent="sidebar"
                type="text"
                html="ENTRANCE"
                width="180"
                height="40"
                align="lefttop"
                x="15"
                y="170"
                background="false"  
                bgalpha="0"       
                border="none"  
                css="font-family: 'Montserrat', sans-serif; font-size:16px; font-weight:400; color:#FAF9F6;"
                

                onclick="loadscene(scene_ENTRANCE, null, MERGE); set(layer[scene_title_display].html, 'Entrance'); set(layer[scene_title_display].visible, true);toggle_sidebar();"
                onhover="set(layer[overview_button].css, 'font-family: Montserrat, sans-serif; font-size:16px; font-weight:400; color:#000000');"
                onout="set(layer[overview_button].css, 'font-family: Montserrat, sans-serif; font-size:16px; font-weight:400; color:#FAF9F6');"
                visible="true"
                keep="true"
                zorder="1001"
                bgroundedge="10" />

                <!-- Second Separator -->
            <layer name="separator2"
                parent="sidebar"
                type="container"
                align="lefttop"
                x="15"
                y="210"
                width="220"
                height="1"
                bgcolor="0xFFFFFF"
                bgalpha="0.3"
                keep="true"
                zorder="1000" />
            
            <!-- Second button, First Dropdown -->
            <layer name="dropdown1"
                parent="sidebar"
                type="text"
                html="GROUND FLOOR â–¼"
                width="180"
                height="40"
                align="lefttop"
                x="15"
                y="220"
                background="false"
                bgalpha="0"
                border="none"
                css="font-family: 'Montserrat', sans-serif; font-size:16px; font-weight:400; color:#FAF9F6;"

                onclick = "toggle_groundfloor_dropdown();"
                onhover="set(layer[dropdown1].css, 'font-family: Montserrat, sans-serif; font-size:16px; font-weight:400; color:#000000');"
                onout="set(layer[dropdown1].css, 'font-family: Montserrat, sans-serif; font-size:16px; font-weight:400; color:#FAF9F6');"
                visible="true"
                keep="true"
                zorder="1001"
		        />
                    <layer name="separator3"
                        parent="sidebar"
                        type="container"
                        align="lefttop"
                        x="15"
                        y="260"
                        width="220"
                        height="1"
                        bgcolor="0xFFFFFF"
                        bgalpha="0.3"
                        keep="true"
                        visible="false"
                        zorder="1000" />

                        <!-- ALL BUTTONS BELOW DROPDOWN 1 -->
                <layer name="dropdown1button1"
                        parent="sidebar"
                        type="text"
                        html="HALL"
                        width="180"
                        height="40"
                        align="lefttop"
                        x="30"
                        y="270"
                        background="false"
                        bgalpha="0"
                        border="none"
                        css="font-family: 'Montserrat', sans-serif; font-size:16px; font-weight:400; color:#FAF9F6;"
                        onclick="loadscene(scene_LIVING_AREA, null, MERGE); set(layer[scene_title_display].html, 'BANQUET HALL'); set(layer[scene_title_display].visible, true);toggle_sidebar();"
                        onhover="set(layer[dropdown1button1].css, 'font-family: Montserrat, sans-serif; font-size:16px; font-weight:400; color:#000000');"
                        onout="set(layer[dropdown1button1].css, 'font-family: Montserrat, sans-serif; font-size:16px; font-weight:400; color:#FAF9F6');"
                        visible="false"
                        keep="true"
                        zorder="1001" />

                <layer name="separator4"
                        parent="sidebar"
                        type="container"
                        align="lefttop"
                        x="15"
                        y="310"
                        width="220"
                        height="1"
                        bgcolor="0xFFFFFF"
                        bgalpha="0.3"
                        keep="true"
                        visible="false"
                        zorder="1000" />

                 <layer name="dropdown1button2"
                        parent="sidebar"
                        type="text"
                        html="BAR"
                        width="180"
                        height="40"
                        align="lefttop"
                        x="30"
                        y="320"
                        background="false"
                        bgalpha="0"
                        border="none"
                        css="font-family: 'Montserrat', sans-serif; font-size:16px; font-weight:400; color:#FAF9F6;"
                        onclick="loadscene(scene_BAR, null, MERGE); set(layer[scene_title_display].html, 'CAFE'); set(layer[scene_title_display].visible, true);toggle_sidebar();"
                        onhover="set(layer[dropdown1button2].css, 'font-family: Montserrat, sans-serif; font-size:16px; font-weight:400; color:#000000');"
                        onout="set(layer[dropdown1button2].css, 'font-family: Montserrat, sans-serif; font-size:16px; font-weight:400; color:#FAF9F6');"
                        visible="false"
                        keep="true"
                        zorder="1001" />

                <layer name="separator5"
                        parent="sidebar"
                        type="container"
                        align="lefttop"
                        x="15"
                        y="360"
                        width="220"
                        height="1"
                        bgcolor="0xFFFFFF"
                        bgalpha="0.3"
                        visible="false"
                        keep="true"
                        zorder="1000" />

                <layer name="dropdown1button3"
                        parent="sidebar"
                        type="text"
                        html="KITCHEN"
                        width="180"
                        height="40"
                        align="lefttop"
                        x="30"
                        y="370"
                        background="false"
                        bgalpha="0"
                        border="none"
                        css="font-family: 'Montserrat', sans-serif; font-size:16px; font-weight:400; color:#FAF9F6;"
                        onclick="loadscene(scene_KITCHEN, null, MERGE); set(layer[scene_title_display].html, 'KITCHEN'); set(layer[scene_title_display].visible, true);toggle_sidebar();"
                        onhover="set(layer[dropdown1button3].css, 'font-family: Montserrat, sans-serif; font-size:16px; font-weight:400; color:#000000');"
                        onout="set(layer[dropdown1button3].css, 'font-family: Montserrat, sans-serif; font-size:16px; font-weight:400; color:#FAF9F6');"
                        visible="false"
                        keep="true"
                        zorder="1001" />
                        
                

    </layer>
        
</krpano>