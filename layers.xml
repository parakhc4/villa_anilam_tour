<krpano>
    <!-- Welcome Layer -->
    <layer name="welcome_layer"
        type="container"
        width="100%"
        height="100%"
        align="center"
        x="0"
        y="0"
        bgcolor="0xFFFFFF"
        bgalpha="0.8"
        zorder="10000"
        alpha="1.0"
        keep="true" />
        <!-- Welcome Logo -->
    <layer name="welcome_logo"
        parent="welcome_layer"
        url="%SWFPATH%/skin/WelcomeScreen.png" 
        align="center"
        x="0"
        y="-50"
        width="276"
        height="190"
        zorder="10001"
        keep="true"
        handcursor="false"/>
        <!-- Enter Button -->
    <layer name="welcome_button"
        parent="welcome_layer"
        type="text"
        html="Enter"
        align="center"
        x="0"
        y="100"
        width="200"
        height="50"
        bgcolor="0xB8860B"
        bgalpha="1"
        roundedge="15"
        bgshadow="2"
        shadowcolor="0x000000"
        shadowalpha="0.4"
        css="font-family:'Montserrat', sans-serif; font-size:18px; font-weight:bold; color:white; text-align:center; line-height:50px;text-transform: uppercase;"
        onover="tween(scale, 1.1);"
        onout="tween(scale, 1.0);"
        onclick="hide_welcome_layer_natural();init_flags();toggle_music();"
        keep="true"
        zorder="99999" />
        <!-- Logo on top of screen -->
        <layer name="logo_layer"
        url="%SWFPATH%/skin/logo_white.png"
        align="centertop"
        x="0"
        y="10"
        width="190"
        height="60"
        keep="true"
        handcursor="false"
        zorder="999" />
    

    <!-- The BIG 3 : Music, Menu and DayNight -->
    <!-- Menu Button -->
    <layer name="menu_button"
		url="%SWFPATH%/skin/button_toggle.png"
        align="midleft"
        width="40"
        height="40"
        enabled="true"
        handcursor="true"
        keep="true"
        zorder="1000" 
        onover="tween(scale, 1.1, 0.2, easeOutCubic);"
        onout="tween(scale, 1.0, 0.2, easeOutCubic);" 
        onclick="toggle_sidebar();"/>

        <!-- Music Button -->
        <layer name="music_toggle_button"
        url="%SWFPATH%/skin/soundonoff.png"
        width="40"
        height="40"
        align="midright"         
        onclick="toggle_music();"
        visible="true"
        keep="true"
        zorder="2000"
        onover="tween(scale, 1.1, 0.2, easeOutCubic);"
        onout="tween(scale, 1.0, 0.2, easeOutCubic);"  />


        <!-- Day Night -->
        <layer name="daynight_button"
        url="%SWFPATH%/skin/dayandnight.png"
        width="60"
        height="60"
        align="bottomcenter"  
        y="4%"             
        onclick="switch_daynight();"
        visible="false"
        keep="true"
        zorder="2000"
        onover="tween(scale, 1.1, 0.2, easeOutCubic);"
        onout="tween(scale, 1.0, 0.2, easeOutCubic);" />


